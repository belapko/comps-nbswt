{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist/",
    "esModuleInterop": true,
    "removeComments": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/stories"]
}